<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'pagefly-head' %}
    <meta charset="utf-8">
    {{ 'base-global.css' | asset_url | stylesheet_tag }}
    {{ 'base-layout.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body>

    {% sections 'base-header' %}
    
    <main
      id="MainContent"
      class="content-for-layout focus-none"
      role="main"
      tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'base-footer' %}

  </body>
</html>