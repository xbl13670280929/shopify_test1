<div class="base-header">
    <div class="ef-content">
        <div class="header-l">
            {%- render 'icon-facebook' -%}
        </div>
        <div class="header-c">
            <div class="header-menu-item">{{ section.settings.menua_title }}</div>
            <div class="header-menu-item">{{ section.settings.menub_title }}</div>
            <div class="header-menu-item">{{ section.settings.menuc_title }}</div>
        </div>
        <div class="header-r">334</div>
    </div>
</div>

{% schema %}
{
    "name": "t:sections.footer.name",
    "settings": [
        {
            "type": "text",
            "id": "menua_title",
            "label": "分类A",
            "default": "Mac"
        },
        {
            "type": "text",
            "id": "menub_title",
            "label": "分类B",
            "default": "iPad"
        },
        {
            "type": "text",
            "id": "menuc_title",
            "label": "分类C",
            "default": "iPhone"
        }
    ]
}
{% endschema %}